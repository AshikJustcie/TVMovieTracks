<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bottom_Fragments.CompanyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!--Status-->
            <include layout="@layout/content_main_status"/>

            <!--Movies-->
            <include layout="@layout/content_main_movies"/>

            <!--TV Show-->
            <include layout="@layout/content_main_tvshow"/>

            <!-- Celebrity-->
            <include layout="@layout/content_main_celebrity"/>


            <Button
                android:id="@+id/animation_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Animation"
                android:paddingLeft="60dp"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left|center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@color/ash"/>

            <Button
                android:id="@+id/movie_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="MOVIE"
                android:paddingLeft="60dp"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left|center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@color/ash"/>

            <Button
                android:id="@+id/tv_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="TV SHOW"
                android:paddingLeft="60dp"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="left|center_vertical"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>