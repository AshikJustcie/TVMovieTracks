<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bottom_Fragments.CompanyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F5F5"
            android:orientation="vertical">

            <!--Status-->
            <include layout="@layout/content_main_status" />

            <!--Movies-->
            <include layout="@layout/content_main_movies" />

            <!--TV Show-->
            <include layout="@layout/content_main_tvshow" />

            <!-- Celebrity-->
            <include layout="@layout/content_main_celebrity" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>